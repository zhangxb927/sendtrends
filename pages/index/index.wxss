.fabu{
  margin: 40rpx;
}
.fabu_text{
  width: 100%;
  height: 300rpx;
}
.fabu_image{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.image_item,.add_wraper{
  width: 33%;
  height: 222rpx;
  background-color: #F7F7F7;
  margin-right: 0.3%;
  margin-bottom: 10rpx;
}
.image_item{
  position: relative;
}
.close_image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.image_item .item_image{
  width: 100%;
  height: 100%;
}
.add_image{
  width: 50%;
  height: 50%;
  margin-top: 25%;
  margin-left: 25%;
}
button{
  margin-top:20rpx;
}